<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    android:layout_height="match_parent"
    tools:context="com.android.cour.menfpapp.EnregistreEcoleActivity">


    <TextView
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="PremiÃ¨re Partie: Information sur l'ecole"/>

    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="4dp"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="localisation:"/>

        <EditText
            android:textSize="15dp"
            android:id="@+id/edtlocal"
            android:layout_width="150dp"
            android:layout_height="50dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:text="Nom Ecole:"/>

        <EditText
            android:textSize="14dp"
            android:id="@+id/edtno"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:hint="(presiser le sigle s'il y a lieu)"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="95dp"
        android:paddingLeft="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Tels:"/>

        <EditText
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:id="@+id/edttelephone"
            android:layout_width="160dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="125dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Departements Geographique:"/>

        <EditText
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:id="@+id/editText4"
            android:layout_width="120dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="160dp"
        android:paddingLeft="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Arrondisements:"/>

        <EditText
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:id="@+id/edtArrond"
            android:layout_width="90dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="195dp"
        android:paddingLeft="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Commune:"/>

        <EditText
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:id="@+id/edtComm"
            android:layout_width="90dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:textColor="@color/colorPrimary"
        android:paddingTop="249dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Deuxieme Partie: Information"/>


    <LinearLayout
        android:paddingTop="400dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnVal"
            android:paddingLeft="8dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Valider"/>

        <Button
            android:id="@+id/btnquitter"
            android:paddingLeft="8dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Quitter"/>

    </LinearLayout>



</RelativeLayout>
