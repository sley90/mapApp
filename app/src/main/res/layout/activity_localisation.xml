<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.cour.menfpapp.EnregistreEcoleActivity">


    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapfragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.cour.menfpapp.LocalisationActivity" />

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="428dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/edtlocali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localisation"
            android:ems="10"
            android:textColor="@color/colorPrimary"
            android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="470dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnVAL"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Point GPS" />

        <Button
            android:id="@+id/btnquit"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:hint="Quitter" />

        <Button
            android:id="@+id/btnNouvec"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:hint="creer Nouvelle Ecole" />


    </LinearLayout>

</RelativeLayout>